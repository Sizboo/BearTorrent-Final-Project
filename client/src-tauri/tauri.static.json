{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "tauri-react-demo",
  "version": "0.1.0",
  "identifier": "com.kingwillie.tauriapp",
  "build": {
    "frontendDist": "../frontend/build",
    "devUrl": "app://local",
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd ./frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri React App",
        "width": 1024,
        "height": 768,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}